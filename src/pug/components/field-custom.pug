//- ** Component for putting custom templates into the main form component

mixin fieldCustom(props)
  if (props.template === 'rate')
    .rate
      span.form__label Ваша оценка
      .rate-stars
        .rate-star
          input#rate-star-5(type='radio', name='review-rate', value='5')
          label(for='rate-star-5', aria-label='5 star') #[+icon('star')]
        .rate-star
          input#rate-star-4(type='radio', name='review-rate', value='4', checked)
          label(for='rate-star-4', aria-label='4 star') #[+icon('star')]
        .rate-star
          input#rate-star-3(type='radio', name='review-rate', value='3')
          label(for='rate-star-3', aria-label='3 star') #[+icon('star')]
        .rate-star
          input#rate-star-2(type='radio', name='review-rate', value='2')
          label(for='rate-star-2', aria-label='2 star') #[+icon('star')]
        .rate-star
          input#rate-star-1(type='radio', name='review-rate', value='1')
          label(for='rate-star-1', aria-label='1 star') #[+icon('star')]

  if (props.template === 'files')
    .files-container-wrapper
      .files-container(data-files-uploader)
        label.files-field
          input.input-file(
            type='file',
            name='review-files',
            accept='.png, .jpg, .jpeg',
            aria-label='Загрузить фотографии',
            multiple
          ) 
          span.files-field__caption Загрузить фотографии. #[br.sm]Максимальный вес 10 мегабайт.&nbsp;#[br]Расширение jpeg, png
      .files-container-errors
